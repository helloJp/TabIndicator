<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <me.jp.indicator.TabsIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:dividerColor="#90ffffff"
        app:linePosition="bottom"
        app:dividerVerticalMargin="8dp"
        app:dividerWidth="2dp"
        app:hasDivider="true"
        app:lineColor="@android:color/white"
        app:lineHeight="2dp"
        app:lineMarginTab="5dp"
        app:textColor="@color/selector_tab"
        app:textSizeNormal="14sp"
        app:textSizeSelected="18sp"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_dark"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />

    <me.jp.indicator.TabsIndicator
        android:id="@+id/indicator2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/black"
        app:dividerColor="@android:color/holo_red_dark"
        app:linePosition="top"
        app:dividerVerticalMargin="8dp"
        app:dividerWidth="2dp"
        app:hasDivider="true"
        app:lineColor="@android:color/holo_red_dark"
        app:lineHeight="2dp"
        app:lineMarginTab="5dp"
        app:textColor="@color/selector_tab"
        app:textSizeNormal="14sp"
        app:textSizeSelected="14sp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <me.jp.indicator.TabsIndicator
        android:id="@+id/indicator3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:dividerColor="#90ffffff"
        app:linePosition="top"
        app:dividerVerticalMargin="8dp"
        app:dividerWidth="2dp"
        app:hasDivider="true"
        app:lineColor="@android:color/white"
        app:lineHeight="2dp"
        app:lineMarginTab="5dp"
        app:textColor="@color/selector_tab"
        app:textSizeNormal="14sp"
        app:textSizeSelected="14sp"
        />


</LinearLayout>
